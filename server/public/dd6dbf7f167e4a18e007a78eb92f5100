//progremme to add two arrays
   int a[5], b[5], c[5];
   printf("entre the first array element:\n");
   for(int i=0;i<5;i++)
   {
        scanf("%d",&a[i]);
   }
   printf("entre the second array element:\n");
    for(int i=0;i<5;i++)
   {
        scanf("%d",&b[i]);
   }
    for(int i=0;i<5;i++)
    {
         c[i]=a[i]+b[i];
         printf("\nthird array element at index %d is:%d ",i,c[i]);

    }




// progremme to take input from user for 2d array and to print it
int a[3][3];
printf("entre the array element:\n");
for(int i=0;i<3;i++)
{
     for(int j=0;j<3;j++)
     {
          scanf("%d",&a[i][j]);
          
     }
}
printf("the 2d array is \n");
for(int i=0;i<3;i++)
{
     for(int j=0;j<3;j++)
     {
         printf("%d \t",a[i][j]);
          
     }
     printf("\n");




//to print transpose of matrixx
int a[3][2];
printf("entre the array element:\n");
for(int i=0;i<3;i++)
{
     for(int j=0;j<2;j++)
     {
          scanf("%d",&a[i][j]);
          
     }
}


printf("the matrix is :\n");
for(int i=0;i<3;i++)
{
     for(int j=0;j<2;j++)
     {
          printf("%d \t",a[i][j]);
          
     }
     printf("\n");
}
printf("the transpose of given matrixx is:\n");
for(int i=0;i<2;i++)
{
     for(int j=0;j<3;j++)
     {
          printf("%d \t",a[j][i]);
     }
     printf("\n");
}




 //to print transpose of matrixx
int a[3][2];
printf("entre the array element:\n");
for(int i=0;i<3;i++)
{
     for(int j=0;j<2;j++)
     {
          scanf("%d",&a[i][j]);
          
     }
}


printf("the matrix is :\n");
for(int i=0;i<3;i++)
{
     for(int j=0;j<2;j++)
     {
          printf("%d \t",a[i][j]);
          
     }
     printf("\n");
}
// to print sum of rows and columns
printf("the sum of rows and columns are:\n");
int sum_rows,sum_col;
for(int i=0;i<3;i++)
{
     sum_rows=sum_col=0;
     for(int j=0;j<2;j++)
     {
          sum_rows=sum_rows+a[i][j];
          sum_col=sum_col+a[j][i];
          
     }
     printf("\n sum_rows=%d, sum_col=%d",sum_rows,sum_col);
     
}





//progremme for addition of two matrixx
    int a[3][3],b [3][3],c [3][3];
    printf ("entre the first array element:\n");
    for(int i=0;i<3;i++)
    {
         for(int j=0;j<3;j++)
         {
              scanf("%d",&a[i][j]);
         }
    }
    printf("entre the second array element;\n");
    for(int i=0;i<3;i++)
    {
         for(int j=0;j<3;j++)
         {
              scanf("%d",&b[i][j]);
         }
    }
    printf("the first mstrixx is:\n");
    for(int i=0;i<3;i++)
    {
         for(int j=0;j<3;j++)
         {
              printf("%d \t",a[i][j]);
         }
         printf("\n");
         
    }
    printf("the second matrixx is:\n");
    for(int i=0;i<3;i++)
    {
         for(int j=0;j<3;j++)
         {
              printf("%d \t",b[i][j]);
         }
         printf("\n");
         
    }
    //to add this matrixx
    printf("sum of this matrices is:\n");
    for(int i=0;i<3;i++)
    {
         for(int j=0;j<3;j++)
         {
              c[i][j]=a[i][j]+b[i][j];
              printf("%d \t",c[i][j]);
              
         }
         printf("\n");
    }